{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://www.w3.org/2023/sparql/results.json",
    "type": "object",
    "required": [
        "head"
    ],
    "dependencies": {
        "boolean": {
            "not": {
                "required": [
                    "results"
                ]
            }
        },
        "results": {
            "not": {
                "required": [
                    "boolean"
                ]
            }
        }
    },
    "properties": {
        "head": {
            "type": "object",
            "properties": {
                "additionalProperties": false,
                "link": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "vars": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "boolean": {
            "type": "boolean"
        },
        "results": {
            "type": "object",
            "required": [
                "bindings"
            ],
            "properties": {
                "bindings": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "dependencies": {
                                "xml:lang": {
                                    "not": {
                                        "required": [
                                            "datatype"
                                        ]
                                    }
                                },
                                "datatype": {
                                    "not": {
                                        "required": [
                                            "xml:lang"
                                        ]
                                    }
                                }
                            },
                            "properties": {
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "uri",
                                        "literal",
                                        "bnode"
                                    ]
                                },
                                "value": {
                                    "type": "string"
                                },
                                "xml:lang": {
                                    "type": "string"
                                },
                                "datatype": {
                                    "type": "string",
                                    "format": "uri"
                                }
                            },
                            "required": [
                                "type",
                                "value"
                            ]
                        }
                    }
                }
            }
        }
    }
}
